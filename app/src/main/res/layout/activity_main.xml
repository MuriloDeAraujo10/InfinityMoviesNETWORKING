<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controler.MainActivity"
    android:background="@drawable/guerra">

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/dica_busca"
        android:id="@+id/txt_busca"
        android:textStyle="italic"
        android:background="@color/colorCinza"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_busca"
        android:onClick="buscarFilmes"
        android:backgroundTint="@color/colorBotao"
        android:textColor="#FFFFFF"/>

</LinearLayout>